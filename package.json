{
  "name": "@tufan-io/datauri",
  "version": "0.1.7",
  "private": false,
  "description": "Platform agnostic way to convert file-contents to datauri",
  "keywords": [],
  "homepage": "https://github.com/tufan-io/tufan-datauri#readme",
  "bugs": {
    "url": "https://github.com/tufan-io/tufan-datauri/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tufan-io/tufan-datauri.git"
  },
  "license": "Apache-2.0",
  "author": "tufan.io",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "doc": "docs"
  },
  "files": [
    "dist",
    "docs"
  ],
  "scripts": {
    "add-changelog": "git add docs/CHANGELOG.md",
    "build": "npm-run-batch",
    "changelog": "conventional-changelog -p angular -i docs/CHANGELOG.md -s",
    "check-coverage": "nyc check-coverage -x .tmp",
    "check-run-scripts": "run-batch",
    "checks": "run-batch",
    "clean": "rimraf dist .nyc_output coverage *.tsbuildinfo",
    "cloc": "run-batch",
    "cloc-cli": "cloc --exclude-dir=test --quiet --sum-one --hide-rate --unix ./src",
    "cloc-md": "cloc --exclude-dir=test --quiet --sum-one --hide-rate --unix --by-file --md --out=docs/cloc.md ./src",
    "cloc-report": "cloc --exclude-dir=test --quiet --sum-one --hide-rate --unix --out=docs/cloc.report ./src",
    "commit": "git-cz",
    "compile": "tsc",
    "compile:watch": "tsc -w",
    "dep-check": "dependency-check . --no-dev",
    "dependency-upgrade": "run-batch",
    "fetch-all-tags": "git fetch --all --tags",
    "format": "eslint src/**/*.ts --fix",
    "git-add-all": "git add .",
    "git-push": "git push",
    "git-push-tags": "git push origin --tags",
    "git-upgrade-commit": "git diff-index --quiet HEAD || git commit -m \"chore: updating dependencies\"",
    "lint": "eslint src/**/*.ts",
    "no-circular-deps": "madge --circular dist/index.js",
    "no-mods": "git-mods",
    "npm-check_": "npm-check -y",
    "nyc-report": "nyc report --reporter=text-summary",
    "pkg-ok": "pkg-ok",
    "pre-commit-hook": "run-batch",
    "pre-push-hook": "run-batch",
    "prepare": "node-which npm-check git-cz",
    "prepublishOnly": "run-batch",
    "postpublish": "run-batch",
    "qt": "run-batch",
    "secure": "npm audit",
    "sh": "npm-sh",
    "snapshots": "cross-env NODE_ENV=test ava --verbose --update-snapshots",
    "sort-package-json": "sort-package-json",
    "staged-mods-ok": "git-mods --staged_ok",
    "test": "cross-env NODE_ENV=test nyc -r lcov -r text-summary -r json-summary ava --verbose",
    "test-no-cover": "cross-env NODE_ENV=test ava --verbose",
    "todos": "leasot --exit-nicely --skip-unsupported ./src",
    "todos-md": "leasot --exit-nicely --skip-unsupported --reporter markdown ./src> ./docs/TODOs.md",
    "upgrade-all": "npm upgrade",
    "preversion": "run-batch",
    "version": "conventional-changelog -p angular -i docs/CHANGELOG.md -s && git add docs/CHANGELOG.md"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit-hook",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run pre-push-hook"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "changelog": {
        "disableEmoji": true
      },
      "path": "git-cz"
    }
  },
  "ava": {
    "files": [
      "dist/**/test.js",
      "dist/**/test/**/*.js",
      "!dist/**/test/fixtures/**/*.js",
      "!dist/**/helpers/**",
      "!.tmp"
    ]
  },
  "nyc": {
    "exclude": [
      "**/test/**",
      "**/helpers/**",
      ".tmp/**"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "watermarks": {
      "branches": [
        100,
        100
      ],
      "functions": [
        100,
        100
      ],
      "lines": [
        100,
        100
      ],
      "statements": [
        100,
        100
      ]
    }
  },
  "dependencies": {
    "datauri": "^3.0.0",
    "eol": "^0.9.1",
    "fs-extra": "^9.1.0"
  },
  "devDependencies": {
    "@tufan-io/simple-ci": "^0.4.17"
  },
  "engines": {
    "node": ">=13.0.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "run-batch": {
    "build": [
      "format",
      "lint",
      "clean",
      "compile",
      "test",
      "no-circular-deps",
      "cloc",
      "todos",
      "todos-md"
    ],
    "qt": [
      "compile",
      "test-no-cover"
    ],
    "checks": [
      "lint",
      "check-coverage",
      "dep-check",
      "no-circular-deps",
      "pkg-ok",
      "staged-mods-ok"
    ],
    "prepublishOnly": [
      "no-mods"
    ],
    "pre-commit-hook": [
      "check-coverage",
      "dep-check",
      "pkg-ok",
      "sort-package-json",
      "no-circular-deps",
      "staged-mods-ok"
    ],
    "pre-push-hook": [
      "secure",
      "no-mods"
    ],
    "cloc": [
      "cloc-md",
      "cloc-report",
      "cloc-cli"
    ],
    "dependency-upgrade": [
      "no-mods",
      "upgrade-all",
      "dep-check",
      "no-circular-deps",
      "git-add-all",
      "build",
      "git-upgrade-commit"
    ],
    "preversion": [
      "no-mods",
      "fetch-all-tags"
    ],
    "postpublish": [
      "git-push",
      "git-push-tags"
    ],
    "check-run-scripts": [
      "build",
      "qt",
      "checks",
      "pre-commit-hook",
      "pre-push-hook",
      "dependency-upgrade"
    ]
  },
  "simple-ci": {
    "version": "0.3.3"
  }
}
